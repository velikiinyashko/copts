@model copts.Areas.cabinet.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Вход в систему</h2>

<div class="container">
    <form asp-action="login" asp-controller="home" asp-antiforgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label class="control-label" asp-for="Login">Имя пользователя</label>
                <input class="form-control" type="text" asp-for="Login" />
                <span asp-validation-for="Login"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Password">Пароль</label>
                <input class="form-control" type="password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Вход" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>