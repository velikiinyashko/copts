@using copts.Areas.cabinet.ViewModels
@model LoginModel;
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form asp-action="login" asp-controller="home" asp-area="cabinet" class="px-4 py-3">
    <div class="form-group">
        <label class="form-control-label" asp-for="Login"><i class="fa fa-user"></i> Пользователь:</label>
        <input type="text" class="form-control" asp-for="Login" placeholder="Login">
    </div>
    <div class="form-group">
        <label class="form-control-label" asp-for="Password"><i class="fa fa-key"></i> Пароль:</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Вход</button>
    </div>
</form>